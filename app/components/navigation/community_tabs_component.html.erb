<div class="sm:block">
  <div class="border-b border-gray-200">
    <nav class="container flex -mb-px space-x-8" aria-label="Tabs">
      <% @items.each do |item| %>
        <% if item[:active] %>
          <%= link_to item[:name], item[:path], class: "px-1 py-4 text-sm font-medium text-red-600 border-b-2 border-red-500 whitespace-nowrap" %>
        <% else %>
          <%= link_to item[:name], item[:path], class: "px-1 py-4 text-sm font-medium text-gray-500 border-b-2 border-transparent hover:border-gray-300 hover:text-gray-700 whitespace-nowrap" %>
        <% end %>
      <% end %>
    </nav>
  </div>
</div>

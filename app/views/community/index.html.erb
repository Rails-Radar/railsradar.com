<%= render PanelComponent.new bg_color: "bg-slate-50" do %>
  <%= render HeaderPanelComponent.new title: "Community #{@kind&.titleize}" do%>
  <% end %>
<% end %>
<%= render PanelComponent.new bg_color: "bg-white" do %>
  <%= render Navigation::CommunityTabsComponent.new %>
<% end %>
<% if @kind.present? %>
  <div class="container flex justify-center gap-12">
    <div class="max-w-[768px]">
      <%= render RadarComponent.new(blips: @blips, image_size: 768, title: @kind&.pluralize&.titleize) %>
      <div class="grid justify-center w-full grid-cols-6 my-2 font-bold">
        <div class="col-span-2 text-center">
          <p>
            Adopt
          </p>
        </div>
        <div class="col-span-2 text-center">
          <p>
            Trial
          </p>
        </div>
        <div class="text-center">
          <p>
            Assess
          </p>
        </div>
        <div class="text-center">
          <p>
            Hold
          </p>
        </div>
      </div>
    </div>
    <div class="flex-1 max-w-xl">
      <% @blips.each_with_index do |item, index| %>
        <div class="grid max-w-xl mt-4 divide-y divide-neutral-200">
          <div class="py-2">
            <details class="group">
              <summary class="flex items-center justify-between font-medium list-none cursor-pointer">
                <span><%= index + 1 %>. <%= item.interesting_thing.name %></span>
                <span class="transition group-open:rotate-180">
                  <svg fill="none" height="24" shape-rendering="geometricPrecision" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewBox="0 0 24 24" width="24">
                    <path d="M6 9l6 6 6-6"></path>
                  </svg>
                </span>
              </summary>
              <p class="mt-3 text-neutral-600 group-open:animate-fadeIn"><%= item.interesting_thing.description || "No Description" %></p>
            </details>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="container flex justify-center">
    <div class="grid grid-cols-2 gap-x-12 gap-y-4 max-w-[1072px]">
      <%= render RadarComponent.new(blips: @blips.where(interesting_things: { kind: "technique" }), title: "Techniques", quadrant: :tl) %>
      <%= render RadarComponent.new(blips: @blips.where(interesting_things: { kind: "tool" }), title: "Tools") %>
      <div class="grid justify-center w-full grid-cols-6 font-bold">
        <div class="text-center">
          <p>
            Hold
          </p>
        </div>
        <div class="text-center">
          <p>
            Assess
          </p>
        </div>
        <div class="col-span-2 text-center">
          <p>
            Trial
          </p>
        </div>
        <div class="col-span-2 text-center">
          <p>
            Adopt
          </p>
        </div>
      </div>
      <div class="grid justify-center w-full grid-cols-6 font-bold">
        <div class="col-span-2 text-center">
          <p>
            Adopt
          </p>
        </div>
        <div class="col-span-2 text-center">
          <p>
            Trial
          </p>
        </div>
        <div class="text-center">
          <p>
            Assess
          </p>
        </div>
        <div class="text-center">
          <p>
            Hold
          </p>
        </div>
      </div>
      <%= render RadarComponent.new(blips: @blips.where(interesting_things: { kind: "gem" }), title: "Gems", quadrant: :bl) %>
      <%= render RadarComponent.new(blips: @blips.where(interesting_things: { kind: "platform" }), title: "Platforms", quadrant: :br) %>
    </div>
  </div>
<% end %>

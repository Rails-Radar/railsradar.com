<div id="<%= dom_id team_user %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Team:</strong>
    <%= team_user.team_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= team_user.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this team user", team_user, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this team user', edit_team_user_path(team_user), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
